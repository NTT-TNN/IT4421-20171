<%- include head.ejs %>
    <div class="modal fade" id="Add_Emp" role="dialog">
        <div class="modal-dialog">
    
            <!-- Modal content-->
            <div class="modal-content">
                <form>
                    <div class="modal-header" style="background-color:#2196F3">
                        <h4 class="modal-title">Add Employee</h4>
                    </div>
                    <div class="modal-body">
                        <p> Name:
                            <input id="fullname_ip" type="text" class="form-control" step="1" placeholder="Ho va ten">
                        </p>
                        <p> Gender:
                            <input id="gender_ip" type="text" class="form-control" step="2" placeholder="Nam">
                        </p>
                        <p> Birthday:
                            <input id="birth_ip" type="date" class="form-control">
                        </p>
                        <p> Phone:
                            <input id="phone_ip" type="text" class="form-control">
                        </p>
                        <p> Email:
                            <input id="email_ip" type="text" class="form-control">
                        </p>
                        <p> Position:
                            <input id="position_ip" type="text" class="form-control">
                        </p>
                        <p> Address:
                            <input id="address_ip" type="text" class="form-control">
                        </p>
                        <p style="text-align: center;">
                            <button onclick="status()" type="button" style="position:inherit" class="btn btn-primary mr-auto" id="upload_sm" onclick="">Upload</button>
                        </p>
                        <p style="display:none;">
                            <input type="file" name="file">
                            <input type="submit">
                        </p>
                    </div>
                    <div class="modal-footer">
                        <div class="container-fluid text-center">
                            <button type="button" style="position:inherit" class="btn btn-primary mr-auto">Cancel</button>
                            <button type="button" style="position:inherit" class="btn btn-primary mr-auto" onclick="addEmployee()" data-toggle="modal" href="#table_modal"
                                data-dismiss="modal">
                                Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


<div class="main">
  <div class="searching-area container">
    <div class="input-group" id="text-area-searching">
      <span class="input-group-btn">
        <button class="btn btn-secondary" type="button" onclick="search()"><i class="fa fa-search" aria-hidden="true"></i></button>
      </span>
      <input id="text-searching" type="text" class="form-control" placeholder="Tìm kiếm theo tên, chức vụ,...">
    </div>

      <div id="add-emp">
        <span class="input-group-btn">
          <button class="btn btn-secondary" type="button" data-toggle="modal" data-target="#Add_Emp" ><i class="fa fa-plus" aria-hidden="true"></i></button>
        </span>
      </div>

  </div>

  <div class="content-qlnv">
    <!-- Title -->
    <div class="title-qlnv">
      <h3>DANH SÁCH NHÂN VIÊN</h3>
    </div>
    <!-- List of employees -->
    <div class="list-employees" id="list_emp">
      <% for(var i=0; i<employees.length; i++) {%>
      <div class="employee" id="<%= `emp`+i %>">
        <div class="container emp-content">
          <div class="col-md-2 img-emp">
            <img src="images/avatar-1510997165958" alt="">
          </div>
          <div class="col-md-10 emp-description">
            <div class="emp-body">
              <div class="title-emp">
                <h2><%= employees[i].fullname %></h2>
                </div>
                <div class="description container-fluid">
                  <div class="col-md-6">
                    <div class="item birthday">
                      <div class="icon">
                        <i class="fa fa-birthday-cake" aria-hidden="true"></i>
                      </div>
                      <p><input id="<%= `birthday`+i%>" name="birthday" class="form-control" readonly type="text" value='<%= employees[i].birthday %>'></p>
                    </div>
                    <div class="item sex">
                      <div class="icon">
                        <i class="fa fa-mars" aria-hidden="true"></i>
                        <i class="fa fa-venus" aria-hidden="true"></i>
                      </div>
                      <p><input id="<%= `gender`+i%>"" class="form-control" name="gender" readonly type="text" value='<%= employees[i].gender %>'></p>
                    </div>
                    <div class="item position">
                      <div class="icon">
                        <i class="fa fa-user" aria-hidden="true"></i>
                      </div>
                      <p><input class="form-control" name="position" readonly type="text" value='<%= employees[i].type %>'></p>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="item email">
                      <div class="icon">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                      </div>
                      <p><input id="<%= `email`+i%>"" class="form-control" name="email" readonly type="text" value='<%= employees[i].email %>'></p>
                    </div>
                    <div class="item phone">
                      <div class="icon">
                        <i class="fa fa-mobile" aria-hidden="true"></i>
                      </div>
                      <p><input id="<%= `phone`+i%>" class="form-control" readonly type="text" name="phone" value='<%= employees[i].phonenumber %>'></p>
                    </div>
                    <div class="item address">
                      <div class="icon">
                        <i class="fa fa-map-marker" aria-hidden="true"></i>
                      </div>
                      <p><input id="<%= `address`+i%>" class="form-control" name="address" readonly type="text" value='<%= employees[i].address %>'></p>
                    </div>
                  </div>

                  </div>

                <div class="emp-bottom">
                    <button type="button" class="btn btn-primary mr-auto edit" id="<%= `edit`+i%>" onclick="editForm(<%=i%>)">Edit</button>
                    <button type="button" class="btn btn-primary mr-auto delete"  id="<%= `delete`+i%>" onclick="deleteForm(<%=i%>)">Delete</button>
                    <button type="button" class="btn btn-primary mr-auto edit" id="<%= `ok`+i%>"  style="display:none;">OK</button>
                    <button type="button" class="btn btn-primary mr-auto delete" id="<%= `cancel`+i%>" style="display:none;"><a style="color:white;" href="/user_info">Cancel</a></button>
              </div>

            </div>
          </div>
        </div>
      </div>
        <%}%>
        

      </div>
    </div>

    <footer class="sub_footer">
      <div class="container">
        <div class="row">
          <div class="col-md-4"><p class="sub-footer-text text-center">&copy; A+ Coffee 2017, Theme by <a href="https://themewagon.com/">Team 9</a></p></div>
          <div class="col-md-4"><p class="sub-footer-text text-center">Back to <a href="#top">TOP</a></p></div>
          <div class="col-md-4"><p class="sub-footer-text text-center">Built With Care By <a href="#" target="_blank">Us</a></p></div>
        </div>
      </div>
    </footer>


  </div>
<script> var employees = JSON.parse('<%-JSON.stringify(employees)%>'); </script>
<script src="javascript/qlnv.js" ></script>

