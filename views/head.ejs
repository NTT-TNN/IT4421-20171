  <script type="text/javascript">
  $(document).ready(function(){
    var path = document.URL;
    if(path.includes("BoiBan")){
      $("#OD").addClass("navactive");
    }else if (path.includes("ThongKe")){
      $("#TK").addClass("navactive");
    }else if (path.includes("QuanLyNhanVien")) {
      $("#QLNV").addClass("navactive");
    }else if (path.includes("ThuNgan")) {
      $("#BH").addClass("navactive");
    }else if (path.includes("user_info")) {
      $("#PRO").addClass("navactive");
    }else if (path.includes("QuanLyDoUong")) {
      $("#QLDU").addClass("navactive");
    }else if (path.includes("LapLich")) {
      $("#LL").addClass("navactive");
    }else if (path.includes("LichLamViec")) {
      $("#LLV").addClass("navactive");
    }else if (path.includes("ChamCong")) {
      $("#CC").addClass("navactive");
    }
});
  </script>

